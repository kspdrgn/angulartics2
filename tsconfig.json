{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "types": [
      "jasmine",
      "node"
    ],
    "lib": ["es2015", "dom"]
  },
  "files": [
    "index.ts",
    "src/providers/angulartics2-google-analytics.ts",
    "src/providers/angulartics2-google-tag-manager.ts",
    "src/providers/angulartics2-kissmetrics.ts",
    "src/providers/angulartics2-mixpanel.ts",
    "src/providers/angulartics2-piwik.ts",
    "src/providers/angulartics2-segment.ts"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}